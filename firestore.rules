rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regras para a coleção de professores (teachers)
    match /teachers/{document=**} {
      // Permitir leitura para todos (pode restringir se necessário)
      allow read: if true;
      
      // Permitir escrita para todos (RECOMENDADO: adicionar autenticação)
      // Para produção, mude para: allow write: if request.auth != null;
      allow write: if true;
    }
    
    // Regras para outras coleções (se houver)
    match /{document=**} {
      allow read, write: if false; // Bloquear acesso a outras coleções por padrão
    }
  }
}
